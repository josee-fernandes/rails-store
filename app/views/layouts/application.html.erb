<!DOCTYPE html>
<html>
  <head>
    <title>Loja</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= nav_bar brand: 'Loja', brand_link: root_url do %>
      <%= menu_group do %>
        <%= menu_item 'Criar novo produto', new_product_path %>
        <%= menu_item 'Departamentos', departments_path %>
      <% end %>

      <%= form_tag search_product_path, method: :get, class: 'navbar-form navbar-right' do %>
        <div class="form-group">
          <%= text_field_tag :name, @name, class: 'form-control' %>
          <%= button_to 'Buscar', nil, class: 'btn btn-default'%>
        </div>
      <% end %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
